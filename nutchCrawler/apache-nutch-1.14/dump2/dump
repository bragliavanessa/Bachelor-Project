<ul>
<table border="0" cellpadding="0" cellspacing="0" class="preso">
<script>
$(document).ready(function () {
    $('#dialog-link-2297-dialog-524').click(function () {
        $('#dialog-2297-dialog-524').dialog({
		width: '60%'
	});
        return false;
    });
});  
